#variable        NSTEPS          equal 8000
#variable        THERMO_FREQ     equal 10
#variable        DUMP_FREQ       equal 10
#variable        TEMP            equal 330.000000
#variable        PRES            equal -1.000000
variable        TAU_T           equal 0.100000
variable        TAU_P           equal 0.500000

units           metal
boundary        p p p
atom_style      atomic

neighbor        1.0 bin

#box          tilt large
read_data       ${_INPUT_STRUCTURE}
change_box   all triclinic

pair_style      deepmd ${GRAPHS}  out_freq ${THERMO_FREQ} out_file model_devi.out
pair_coeff

thermo_style    custom step temp pe ke etotal press vol lx ly lz xy xz yz
thermo          ${THERMO_FREQ}
dump            1 all custom ${DUMP_FREQ} *.lammpstrj id type x y z

velocity        all create ${TEMP} ${SEED}
fix             1 all nvt temp ${TEMP} ${TEMP} ${TAU_T}

timestep        0.000500
run             ${NSTEPS}